window.onload = function () {
let b1 = document.getElementById("b1");
let vre = document.getElementById("vre");
b1.onclick = function () {
let v = vre.value;
switch(v){
case 'Декабрь' :
case 'Январь' :
case 'Февраль' : alert("Зима"); break;
case 'Март' :
case 'Апрель' :
case 'Май' : alert("Весна"); break;
case 'Июнь' :
case 'Июль' :
case 'Август' : alert("Лето"); break;
case 'Сентябрь' :
case 'Октябрь' :
case 'Ноябрь' : alert("Осень"); break;
default : alert("Вы ввели неверный месяц");
}
};
};
